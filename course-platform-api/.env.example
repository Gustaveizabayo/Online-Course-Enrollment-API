# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
# Option 1: Using Docker (default)
DATABASE_URL="postgresql://course_user:course_password@localhost:5432/course_platform"
# Option 2: Using local PostgreSQL
# DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/course_platform"
# Option 3: Using Neon, Supabase, etc.
# DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# PayPal Integration (Optional - for payments)
# For development, you can use the mock payment system
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox  # sandbox or production

# Email Configuration (Optional - for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password  # Use App Password for Gmail
SMTP_FROM=noreply@courseplatform.com

# Logging
LOG_LEVEL=debug  # debug, info, warn, error